<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@user, :html => {class: "form-signin",role: "form", id: "edit-form"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Name", :class => "form-control", :id => "name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Email", :class => "form-control", :id => "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", :class => "form-control", :id => "password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", :class => "form-control", :id => "password_confirmation" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
    <br>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails" TARGET = "_blank">change</a>
  </div>
</div>