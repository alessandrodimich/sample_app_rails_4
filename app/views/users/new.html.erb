<% provide(:title, 'Sign up') %>


<div class="row">
  <div class="col-md-4 col-md-offset-3">
      <h1>Sign up</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= form_for(@user, :html => {role: "form", class: "form-signin", id: "sign-up-form"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Name", :class => "form-control", :id => "name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Email", :class => "form-control", :id => "email" %>
      </div>
      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", :class => "form-control", :id => "password" %>
    </div>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>